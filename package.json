{
  "name": "timenaut",
  "version": "0.0.6-snapshot",
  "author": "Karl Martin Teras",
  "description": "Timenaut is software to monitor your computer usage and give you feedback to help you improve.",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service electron:serve",
    "build": "vue-cli-service electron:build",
    "lint": "vue-cli-service lint",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "electron:generate-icons": "electron-icon-builder --input=./src/assets/icon.png --output=build --flatten",
    "release": "vue-cli-service electron:build --publish always"
  },
  "main": "background.js",
  "dependencies": {
    "active-win": "^5.1.2",
    "bulma": "^0.7.5",
    "chart.js": "^2.8.0",
    "core-js": "^2.6.5",
    "material-design-icons": "^3.0.1",
    "better-sqlite3": "^5.4.2",
    "vue": "^2.6.10",
    "vue-chartjs": "^3.4.2",
    "vue-class-component": "^7.0.2",
    "vue-property-decorator": "^8.1.0",
    "auto-launch": "^5.0.5",
    "electron-updater": "^4.1.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^5.4.0",
    "@types/auto-launch": "^5.0.1",
    "@vue/cli-plugin-babel": "^3.10.0",
    "@vue/cli-plugin-eslint": "^3.10.0",
    "@vue/cli-plugin-typescript": "^3.10.0",
    "@vue/cli-service": "^3.10.0",
    "@vue/eslint-config-typescript": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "electron": "^6.0.0",
    "electron-icon-builder": "^1.0.1",
    "electron-log": "^3.0.7",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "typescript": "^3.4.3",
    "vue-cli-plugin-electron-builder": "^1.4.0",
    "vue-template-compiler": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/typescript"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
